<h2> Add a Transaction <h2>

<%= form_with model: @payment, url: category_payments_path(params[:category_id]), method: :post, local: true do |f|%>
    <%= f.label :name , "Transaction name", class:'form-label'%>
    <%= f.text_field :name, required: true, class:'form-control'%>
    <%= f.label :amount, class:'form-label'%>
    <%= f.number_field :amount, step: :any, required: true, class:'form-control' %>
    <%=f.select :category_ids, options_for_select(current_user.categories.all.map{|c| [c.name, c.id]}, @payment.category_ids), 
    {prompt: "Please select category(you can select multiple)"}, {multiple: true, inlcude_blank: false, class: "form-control"}%>
    <%= f.submit class:'btn btn-primary' %>
<%end%>
